<div class="container">
    <div class="card mt-5">
      <div class="card-header">
        <h2>Edit Guest</h2>
      </div>
      <div class="card-body">
        <form action="/guestlist/edit/<%= guest._id %>" method="post">
          <div class="form-group">
            <label for="fullName">Full Name:</label>
            <input type="text" class="form-control" name="fullName" id="fullName" value="<%= guest.fullName %>" required>
          </div>
          <div class="form-group">
            <label for="phone">Phone:</label>
            <input type="text" class="form-control" name="phone" id="phone" value="<%= guest.phone %>" required>
          </div>
          <div class="form-group">
            <label for="guestCategory">Guest Category:</label>
            <select class="form-control" name="guestCategory" id="guestCategory">
              <option value="Adult" <%= guest.guestCategory === 'Adult' ? 'selected' : '' %>>Adult</option>
              <option value="Kid" <%= guest.guestCategory === 'Kid' ? 'selected' : '' %>>Kid</option>
              <option value="Baby" <%= guest.guestCategory === 'Baby' ? 'selected' : '' %>>Baby</option>
            </select>
          </div>
          <div class="form-group">
            <label for="confirmed">Confirmed:</label>
            <select class="form-control" name="confirmed" id="confirmed">
              <option value="Yes" <%= guest.confirmed === 'Yes' ? 'selected' : '' %>>Yes</option>
              <option value="No" <%= guest.confirmed === 'No' ? 'selected' : '' %>>No</option>
            </select>
          </div>
          <button type="submit" class="btn btn-primary mt-3">Update Guest</button>
        </form>
      </div>
    </div>
  </div>
  